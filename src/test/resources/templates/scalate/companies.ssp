<% import ru.sbertech.platformv.print.benchmarktemplateengines.model.dto._  %>
<% import scala.collection._  %>

<%@ val companies:List[CompanyDto] %>

<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Companies Report</title>
<link rel="stylesheet" type="text/css" href="../style.css">
</head>
<body>
    <h1>Companies Report</h1>

    <%-- Iterate over companies --%>
    <% for (company <- companies) { %>
    <div class="company-section">
    <div class="company-info">
        <h2><%= company.getName() %></h2>
        <p><strong>Code:</strong> <%= company.getCode() %></p>
        <p><strong>Email:</strong> <%= company.getEmail() %></p>
        <p><strong>Director:</strong> <%= company.getDirector().getName() %></p>
        <p><strong>Main office:</strong> <%= company.getGeneralOffice().getName() %></p>
    </div>
    <div class="company-logo">
        <img src="../assets/company/<%= company.getLogo().getName() %>" alt="<%= company.getName() %> logo"/>
        </div>
    </div>

    <h3>Additional Offices</h3>
    <% for (office <- company.getAdditionalOffices().asScala.toList) { %>
        <section class="office-section">
        <section class="office-info-section">
            <div class="office-info">
                <h4><%= office.getName() %></h4>
                <p><strong>Location:</strong> <%= office.getLocation() %></p>
                <% if (office.getResources() != null && !office.getResources().isEmpty) { %>
                    <div>
                        <strong>Resources:</strong>
                        <% office.getResources().asScala.zipWithIndex.foreach { case (resource, idx) => %>
                        <p class="resources" style="background-color: <%= List("#ff5733", "#33ff57", "#3357ff")(idx % 3) %>;">
                        <%= resource %>
                        </p>
                        <% } %>
                    </div>
                    <% } %>
            </div>
            <div class="office-photo">
                <img src="../assets/office/<%= office.getPhoto().getName() %>" alt="<%= office.getName() %>" />
                </div>
            </section>
            <table>
                <thead>
                    <tr>
                        <th>Personal Table</th>
                        <th>Name</th>
                        <th>Project</th>
                        <th>Position</th>
                        <th>Salary</th>
                        <th>Experience (years)</th>
                    </tr>
                </thead>
                <tbody>
                    <%-- Iterate over employees of the office --%>
                    <% for (employee <- office.getEmployees.asScala) { %>
                    <tr>
                        <td><%= employee.getId %></td>
                        <td><%= employee.getName %></td>
                        <td><%= employee.getProject.getName %></td>
                        <td><%= employee.getPosition %></td>
                        <td><%= f"${employee.getSalary}%.2f" %></td>
                        <td><%= employee.getExperience %></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </section>
        <% } %>
    <% } %>
</body>
</html>